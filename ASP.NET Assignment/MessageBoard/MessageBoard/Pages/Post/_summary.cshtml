
@model PostMessage

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Id:@Model.Id</h3>
    </div>
    <div class="panel-body">
        <span>Message:@Model.Message</span>

    </div>
    <div class="panel-body">

        <div>
            @if (Model.Comment != null)
            {
            @foreach (CommentMessage cmt in Model.Comment)
            {
                <span>@cmt.Comment</span>
            }
            }
        </div>
       
        <a asp-page="./Comment" class="btn btn-primary" asp-route-resId="@Model.Id">Add Comment</a>
    </div>
    
    <div class="panel-footer">
        @*<a class="btn btn-default btn-sm" asp-page="./LikePost" asp-route-postId="@post.Id">
            <span class="glyphicon glyphicon-thumbs-up"></span> Like
        </a>*@
        <a asp-page="./Likes" class="btn btn-primary"  asp-route-resId="@Model.Id">Like</a>
        <label style="float:right;font-size:20px">@Model.Total_Likes</label>

        <br />

    </div>

</div>