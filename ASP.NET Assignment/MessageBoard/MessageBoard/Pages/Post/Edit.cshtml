@page
@model MessageBoard.Pages.Shared.Post.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Message Board</h2>

<div style="margin-top:20px">
    <form method="post" action="">
       
        <div class="form-group">
            <label asp-for="PostMessage.Message">Message:</label>
            <input asp-for="PostMessage.Message"  autocomplete="off" class="form-control" />
            <span class="text-danger" asp-validation-for="PostMessage.Message">Message is required</span>
        </div>
      
        <button type="submit" class="btn btn-primary">Save</button>
    </form>

</div>

<div style="margin-top:20px;text-decoration:underline">
    <a asp-page="./List">Back</a>
</div>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}